<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PaymentCompletedActivity">

<FrameLayout
    android:id="@+id/ll_green_check"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="72dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/ic_green_check_outer"
        ></ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_green_check_inner"
        android:layout_gravity="center"
        ></ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/ic_check_white"
        ></ImageView>
</FrameLayout>


    <TextView
        android:id="@+id/tvl_awesome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:text="Awesome!!"
        android:layout_marginTop="37dp"
        android:textColor="#222222"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@+id/ll_green_check"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"


        />

    <TextView
        android:id="@+id/tvl_order_complete"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:text="Your order has been completed and is being attended to."
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="#828282"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/tvl_awesome"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"


        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_track_order"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/cart_btn_bg"
        android:fontFamily="@font/inter_bold"
        android:text="Track order"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvl_order_complete">

    </androidx.appcompat.widget.AppCompatButton>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_continue_shopping"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/border_btn_bg"
        android:fontFamily="@font/inter_bold"
        android:text="Continue shopping"
        android:textAllCaps="false"
        android:textColor="#222222"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/btn_track_order"

        >

    </androidx.appcompat.widget.AppCompatButton>

</androidx.constraintlayout.widget.ConstraintLayout>