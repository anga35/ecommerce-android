<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_product"
        android:layout_width="100dp"
        android:layout_height="80dp"
        app:cardBackgroundColor="#F4F6F8"
        app:cardCornerRadius="15dp"
        app:cardElevation="3dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        >

        <ImageView
            android:id="@+id/imv_product"
            android:layout_width="42.32dp"
            android:layout_height="60dp"
            android:src="@drawable/shirt_image"
            android:layout_gravity="center"
            ></ImageView>

    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:text="Iphone 13 Pro"
        android:layout_gravity="start"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="14sp"
        android:lineSpacingExtra="-5sp"
        android:fontFamily="@font/inter_medium"
        android:textColor="#828282"
        android:singleLine="true"
        android:ellipsize="end"

        app:layout_constraintTop_toTopOf="@id/card_product"
        app:layout_constraintLeft_toRightOf="@id/card_product"
        ></TextView>


    <TextView
        android:id="@+id/tv_product_price"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:text="NGN 646,000"
        android:layout_gravity="start"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:lineSpacingExtra="-5sp"
        android:fontFamily="@font/inter_bold"
        android:textColor="#222222"
        android:singleLine="true"
        android:ellipsize="end"

        app:layout_constraintTop_toBottomOf="@id/tv_product_name"
        app:layout_constraintLeft_toRightOf="@id/card_product"
        ></TextView>





    <TextView
        android:id="@+id/tv_product_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="2"
        android:textSize="18sp"
        android:textColor="#222222"
        android:fontFamily="@font/inter_bold"
        android:paddingHorizontal="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        app:layout_constraintTop_toTopOf="@id/card_product"
        app:layout_constraintBottom_toBottomOf="@id/tv_product_price"
        app:layout_constraintRight_toRightOf="parent"

        ></TextView>




    <View
        android:id="@+id/line_1"
        android:layout_width="328dp"
        android:layout_height="2dp"
        android:background="#F1F1F1"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_product"



        />




</androidx.constraintlayout.widget.ConstraintLayout>